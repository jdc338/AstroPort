

<div class="container">
  <div class="create">
  <br>
    <h1>Become a Captain! Add your Spaceship below:</h1>

    <%= simple_form_for [@spaceship] do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :armaments %>
        <%= f.input :capacity %>
        <%= f.input :speed %>
        <%= f.input :price %>
        <%= f.input :photo, as: :file %>
        <%= f.button :submit, class: "btn btn-primary" %>
      <% end %>
  </div>
</div>



